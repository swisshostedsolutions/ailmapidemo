{
  "name": "Python 3.12 Devcontainer",
  // Tells VS Code to build from the Dockerfile in the same folder
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  // Hinzufügen des "features"-Blocks für den SSH-Agent
  // "features": {
  //   "ghcr.io/devcontainers/features/ssh-agent:1": {}
  // },
  // VS Code specific settings and extensions
  "customizations": {
    "vscode": {
      "settings": {
        // Points VS Code to the python interpreter inside the container
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      // Essential extensions to install inside the container
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "github.remotehub",
        "github.vscode-pull-request-github"
      ]
    }
  }
}