{
  "name": "Python 3.12 Devcontainer",
  // Tells VS Code to build from the Dockerfile in the same folder
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  // Add these two properties for SSH agent forwarding
  "mounts": [
    "source=/home/markus/.ssh/agent.sock,target=/tmp/ssh-agent.sock,type=bind",
    // Add this line to mount your .ssh folder
    "source=/home/markus/.ssh/config,target=/home/vscode/.ssh/config,type=bind,consistency=cached",
    // 3. Mount the known_hosts file to avoid host key errors
    "source=/home/markus/.ssh/known_hosts,target=/home/vscode/.ssh/known_hosts,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "SSH_AUTH_SOCK": "/tmp/ssh-agent.sock"
  },
  // VS Code specific settings and extensions
  "customizations": {
    "vscode": {
      "settings": {
        // Points VS Code to the python interpreter inside the container
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      // Essential extensions to install inside the container
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "github.remotehub",
        "github.vscode-pull-request-github"
      ]
    }
  }
}